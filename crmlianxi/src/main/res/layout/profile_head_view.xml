<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:gravity="bottom">



    <ImageView
        android:id="@+id/iv_user_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/tv_user_name"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/iv_user_head"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="qawdqwdqwdqwdwqd"
        android:visibility="gone"
        android:textColor="@color/orange" />

    <LinearLayout
        android:id="@+id/ll_action_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#66000000"
        android:divider="@drawable/ic_img_line_v"
        android:showDividers="middle"
        android:dividerPadding="16dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            android:src="@drawable/crm_email"
            android:layout_gravity="center"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/crm_phone"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/history"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/crm_history"
            android:layout_gravity="center"
            android:textColor="#ffffff" />
    </LinearLayout>
</RelativeLayout>