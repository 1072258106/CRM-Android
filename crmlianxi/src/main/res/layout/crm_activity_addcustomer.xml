        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:text="通讯信息"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/re_fs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:clickable="true"
     >

        <TextView
            android:id="@+id/tv_temp_fsd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="客户类型"
            android:textColor="#353535"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="108dp"
            android:background="#ffffff"
            android:spinnerMode="dialog"
            android:layout_alignLeft="@+id/tv_temp_fsd"
            android:layout_alignStart="@+id/tv_temp_fsd"
            android:layout_marginLeft="108dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF0000"
            android:id="@+id/textView6"
            android:layout_alignTop="@+id/tv_temp_fs"
            android:layout_toRightOf="@+id/tv_temp_fs"
            android:layout_toEndOf="@+id/tv_temp_fs" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgrayline"/>

    <RelativeLayout
        android:id="@+id/re_fss"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:clickable="true" >

        <TextView
            android:id="@+id/tv_temp_fss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="客户性质"
            android:textColor="#353535"
            android:textSize="16sp" />


        <Spinner
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner2"
            android:background="#ffffff"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/tv_temp_fss"
            android:layout_alignStart="@+id/tv_temp_fss"
            android:layout_marginLeft="108dp"
            android:dropDownVerticalOffset="10dp"
            android:spinnerMode="dialog"/>



    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgrayline"/>
    <RelativeLayout
        android:id="@+id/re_sfs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:clickable="true" >

        <TextView
            android:id="@+id/tv_temp_sfs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="企业规模"
            android:textColor="#353535"
            android:textSize="16sp" />


        <Spinner
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner3"
            android:background="#ffffff"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/tv_temp_sfs"
            android:layout_alignStart="@+id/tv_temp_sfs"
            android:layout_marginLeft="108dp"
            android:dropDownVerticalOffset="10dp"
            android:layout_marginStart="200dp"
            android:spinnerMode="dialog"/>


    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgrayline"/>

    <RelativeLayout
        android:id="@+id/re_ssfs"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:layout_gravity="center_vertical"
        android:clickable="true" >

        <TextView
            android:id="@+id/tv_temp_ssfs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
