<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:background="#eef3f5"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar"
            android:background="#106bb9" >
            <RelativeLayout
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/left_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="6dp"
                    android:scaleType="center"
                    android:src="@drawable/tt_top_back" />

                <TextView
                    android:id="@+id/left_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/left_btn"
                    android:gravity="center_vertical"
                    android:text="返回"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:onClick="back"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/add"/>

            <Spinner
                android:id="@+id/Spinner01"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:background="#106bb9"
                android:layout_centerInParent="true"
                android:layout_marginLeft="100dp"
                android:spinnerMode="dialog"
                android:layout_marginStart="100dp" />

            <ImageView
                android:id="@+id/crmarrow"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="2dp"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/Spinner01"
                android:src="@drawable/arrow_crm"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id = "@+id/lay3"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="#fff"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:id="@+id/kehu_sousuo">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/crm_sousuo"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:id="@+id/searchaction"
                        android:textColorHint="@color/lightgray"
                        android:textSize="15sp"
                        android:background="@null"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:hint="搜索"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:id="@+id/lay2">

            <ImageView
                android:layout_height="match_parent"
                android:layout_width="2px"
                android:layout_gravity="right"
                android:background="@color/lightgray" />


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/kehu_shaixuantiaojian">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center"
                        android:textSize="15sp"
                        android:textColor="@color/gray_normal"
                        android:layout_gravity="center_vertical|center"
                        android:text="筛选条件"/>
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/Spinner01"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/arrow_black"/>
                </LinearLayout>
                <ImageView
                    android:layout_height="2px"
                    android:layout_width="match_parent"
                    android:background="@color/lightgray"
                    android:src="@color/lightgray"/>

            </LinearLayout>

            <ImageView
                android:layout_height="match_parent"
                android:layout_width="2px"
                android:layout_gravity="right"
                android:background="@color/lightgray" />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/waveid"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/kehu_gengxinshijian">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center"
                        android:textColor="@color/gray_normal"
                        android:textSize="15sp"
                        android:layout_gravity="center_vertical"
                        android:text="排列顺序"/>
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/Spinner01"
                        android:src="@drawable/arrow_black"/>
                </LinearLayout>
                <ImageView
                    android:layout_height="2px"
                    android:layout_width="match_parent"
                    android:background="@color/lightgray"
                    android:src="@color/lightgray"/>

            </LinearLayout>

        </LinearLayout>
    <TextView
        android:id="@+id/nothing"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="100dp"
        android:textSize="25dp"
        android:textColor="@color/lightgray"
        android:text="您还没添加客户信息！"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:id="@+id/linelayout">
            
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv"
                >
                </ListView>


        </LinearLayout>

</ScrollView>

    </LinearLayout>


