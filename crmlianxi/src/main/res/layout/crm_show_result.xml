        android:id="@+id/black0"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:color="@color/white"
        android:clickable="true">
        </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
