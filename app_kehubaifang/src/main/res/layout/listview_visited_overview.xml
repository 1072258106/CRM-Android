<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/list_visited_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="left|center_vertical"
            android:text="date"
            android:textColor="#ff000000"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left"
            android:layout_toRightOf="@+id/list_visited_item_date"
            android:layout_toLeftOf="@+id/list_visited_item_condition">
            <TextView
                android:id="@+id/list_visited_item_company"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="left"
                android:text="company"
                android:textColor="#ff000000"
                android:minHeight="28dp" />
            <TextView
                android:id="@+id/list_visited_item_contact"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="left"
                android:text="contact"
                android:textColor="#ff000000"
                android:minHeight="28dp" />
            <TextView
                android:id="@+id/list_visited_item_overview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:gravity="left"
                android:textColor="#ff000000"
                android:minHeight="18dp"
                android:text="overview" />
            <!--android:textColor="#88000000"-->
        </LinearLayout>
        <TextView
            android:id="@+id/list_visited_item_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="left|center_vertical"
            android:text="result"
            android:textColor="#ff000000"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>


</LinearLayout>
