<resources>


    <style name="AnimationFade">

        <!-- PopupWindow左右弹出的效果 -->
        <item name="android:windowEnterAnimation">@anim/bpm_popwindow_in</item>
        <item name="android:windowExitAnimation">@anim/bpm_popwindow_out</item>
    </style>

    <style name="Scroller">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bpm_slider_back</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="title_text">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="title_bg">
        <item name="android:background">#f3f4f5</item>
        <item name="android:height">45dp</item>
    </style>

    <style name="content_text">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
