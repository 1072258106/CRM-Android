<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#106bb9">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通知"
            android:id="@+id/textView_create_lable"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_detail_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/notification_conleft" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_create_send"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
             />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="12px"
        android:background="?android:attr/listDivider"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/imagevie_notifacation_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src ="@drawable/notification_detaidl_sender"/>
        <LinearLayout
            android:layout_toRightOf="@+id/imagevie_notifacation_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textview_notifation_detail_name"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="姓名"/>
            <TextView
                android:id="@+id/textview_notifation_detail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"/>

        </LinearLayout>
        <Button
            android:id="@+id/button_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/button_ok"
            android:text="刷新状态"
            />
    <Button
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="确认通知"
        />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:background="?android:attr/listDivider"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textview_notifation_detail_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:text="通知一则"/>
    </RelativeLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:background="?android:attr/listDivider"
        />
    <TextView
        android:id="@+id/textview_notifation_detail_content"
        android:layout_width="fill_parent"
        android:scrollbars="vertical"
        android:layout_height="140dp"
        android:text="通知内容"
        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="12px"
        android:background="?android:attr/listDivider"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:text="通知状态列表"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/notification_detail_list"
        android:background="#00000000"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:visibility="visible"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:textFilterEnabled="false" />



</LinearLayout>