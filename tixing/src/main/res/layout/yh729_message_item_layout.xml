<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/id_msg_item"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <FrameLayout
        android:id="@+id/f_msg_item"
        android:layout_width="64dip"
        android:layout_height="64dip">

        <ImageView
            android:id="@+id/img_msg_item"
            android:layout_width="52dip"
            android:layout_height="52dip"
            android:layout_gravity="center"
            android:layout_margin="12dip" />

        <yh729_UI.yh729_CircleView
            android:gravity="center_vertical|center|center_horizontal"
            android:id="@+id/num_msg_item"
            android:textColor="#ffffff"
            android:layout_gravity="end"
            android:layout_width="16sp"
            android:layout_height="16sp" />

    </FrameLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/f_msg_item"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_msg_item"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/content_msg_item"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/time_msg_item"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right|top"
        android:textSize="13sp" />

</RelativeLayout>